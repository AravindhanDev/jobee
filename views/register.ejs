<%- include('./partials/header.ejs') -%>

<link rel="stylesheet" href="../css/cred.css" />
<div class="form-section row">
	<div class="col-lg-6 col-md-8" style="display: flex; justify-content: center">
		<div class="form-container">
			<div class="warning d-none">
				<i class="bi bi-exclamation-triangle"></i>
				&nbsp;&nbsp;&nbsp;&nbsp;<span style="font-size: 0.85rem"
					>Username Already Exist</span
				>
			</div>
			<h4>Free Registration</h4>
			<span class="text-muted mb-3 info-text"
				>Stay updated on your professional world</span
			>
			<div class="form-group mt-4">
				<label for="username" class="form-label">Account Type</label>
				<strong style="color: #f90716">*</strong>
				<select class="form-select" id="acctype">
					<option selected disabled value="">Any</option>
					<option>Student</option>
					<option>Employer</option>
				</select>
				<div class="form-text d-none">
					<i class="bi bi-exclamation-circle"></i> &nbsp; Account Type is not
					mentioned
				</div>
			</div>
			<div class="form-group mt-4">
				<label for="username" class="form-label">Username</label>
				<strong style="color: #f90716">*</strong>
				<input
					type="text"
					id="username"
					autocomplete="off"
					placeholder="@angelabauer"
					style="background-color: #fff"
					readonly
					onfocus="this.removeAttribute('readonly')"
					maxlength="30"
					class="form-control"
				/>
				<div class="form-text d-none">
					<i class="bi bi-exclamation-circle"></i> &nbsp; Username is not
					mentioned
				</div>
			</div>
			<div class="form-group mt-4">
				<label for="password" class="form-label">Password</label>
				<strong style="color: #f90716">*</strong>
				<div class="input-group">
					<input
						type="password"
						id="password"
						autocomplete="off"
						readonly
						onfocus="this.removeAttribute('readonly')"
						style="background-color: #fff"
						class="form-control"
						placeholder="Must have at least 6 charecters"
					/>
					<button class="btn eye"><i class="far fa-eye"></i></button>
				</div>
				<div class="form-text d-none">
					<i class="bi bi-exclamation-circle"></i> &nbsp; Must have at least 6
					charecters
				</div>
			</div>
			<div class="form-group mt-4" style="text-align: right">
				<a href="/login" style="color: #6e3cbc"> Already on Jobee? Sign In </a>
			</div>
			<div class="form-group mt-4">
				<button
					class="btn btn-violet"
					style="padding: 0.4rem 1.8rem"
					id="register"
				>
					Register
				</button>
			</div>
		</div>
	</div>
