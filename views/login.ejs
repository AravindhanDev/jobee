<%- include('./partials/header.ejs') -%>

<link rel="stylesheet" href="../css/cred.css" />
<div class="form-section row">
	<div class="col-lg-6 col-md-8" style="display: flex; justify-content: center">
		<div class="form-container">
			<div class="warning d-none">
				<i class="bi bi-exclamation-triangle"></i>
				&nbsp;&nbsp;&nbsp;&nbsp;<span style="font-size: 0.85rem"
					>Incorrect Username or Password</span
				>
			</div>
			<h4 class="mb-3">Log in</h4>
			<div class="form-group mt-4">
				<label for="username" class="form-label">Username</label>
				<strong style="color: #f90716">*</strong>
				<input
					type="text"
					id="username"
					autocomplete="off"
					style="background-color: #fff"
					readonly
					onfocus="this.removeAttribute('readonly')"
					maxlength="30"
					class="form-control"
				/>
				<div class="form-text d-none">Incorrect Username</div>
			</div>
			<div class="form-group mt-4">
				<label for="password" class="form-label">Password</label>
				<strong style="color: #f90716">*</strong>
				<div class="input-group">
					<input
						type="password"
						id="password"
						autocomplete="off"
						readonly
						onfocus="this.removeAttribute('readonly')"
						style="background-color: #fff"
						class="form-control"
						placeholder=""
					/>
					<button class="btn eye"><i class="far fa-eye"></i></button>
				</div>
				<div class="form-text d-none">Incorrect Password</div>
			</div>
			<div class="form-group mt-4" style="text-align: right">
				<a href="/" style="color: #6e3cbc"> Join Now? Sign Up </a>
			</div>
			<div class="form-group mt-4">
				<button class="btn btn-violet" id="register">Login</button>
			</div>
		</div>
	</div>
</div>
<script src="../js/login.js"></script>

<%- include('./partials/footer.ejs') -%>
